  styleUrls: ['./table.component.css']
})
export class TableComponent {
  channels: any[] = []; // Populate this array with your channel data
  // You can add properties or methods as needed
}


<!-- table.component.html -->
<table>
  <thead>
    <tr>
      <th>Channel Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr *ngFor="let channel of channels">
      <td>{{ channel.name }}</td>
      <td>
        <button (click)="editChannel(channel)">Edit</button>
        <button (click)="deleteChannel(channel)">Delete</button>
      </td>
    </tr>
  </tbody>
</table>

